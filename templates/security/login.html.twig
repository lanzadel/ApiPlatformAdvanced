

<form method="post" action="{{ path('security_login') }}">


    <label for="username" class="sr-only">Username</label>
    <input type="text" name="_username" id="username" class="form-control" placeholder="Username" required autofocus>

    <label for="password" class="sr-only">Password</label>
    <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <input type="hidden" name="_target_path"
           value="{{ app.request.get('redirect_to') }}"
    >
    <button class="btn btn-lg btn-primary" name="Login" type="submit">
        Sign in
    </button>
</form>
